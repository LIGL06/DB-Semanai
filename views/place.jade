block content
  .container
    .row
      .col-xs-12.col-md-12
        .panel.panel-default
          .panel-body
            p.text-center Editar #[strong #{place.nombreLugar}]
              .form-group.col-md-6
                label(for='nombreLugar') Nombre punto de interes
                p #{place.nombreLugar}
              .form-group.col-md-6
                label(for='subnombreLugar') Subnombre del punto de interes
                p #{place.subnombreLugar}
              .form-group.col-md-12
                label(for='descLugar') Descripción de punto de interes
                p #{place.descLugar}
              .form-group.col-md-12
                label(for='historiaLugar') Historia de punto de interes
                p #{place.historiaLugar}
              .form-group.col-md-6
                label(for='latitudLugar') Coordenadas del punto de interes
                p #{place.latitudLugar},#{place.longitudLugar}
              .form-group.col-md-12
                label(for='fotoLugar') Fotografías del punto de interes
                img.img-responsive.col-md-12.img-thumbnail(src='/uploads/#{place.bgLugar}')
                img.img-responsive.col-md-6.img-thumbnail(src='/uploads/#{place.fotos[0]}')
                img.img-responsive.col-md-6.img-thumbnail(src='/uploads/#{place.fotos[1]}')
              .form-group.col-md-1
